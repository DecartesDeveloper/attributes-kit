/**
 * Layout
 */
.attributeObjectMember
  width 100%
  height auto
  display flex
  flex-direction row
  flex-wrap wrap
  justify-content flex-start
  align-items flex-start

.attributeObjectMemberToggle
.attributeObjectMemberKey
.attributeObjectMemberRequirement
.attributeObjectMemberDescription
.attributeObjectMemberValue
  flex-grow 1  
  height auto
  width auto

.attributeObjectMemberToggle
  width 0px
  max-width 0px
  min-width 0px
  height auto
  order 1

.attributeObjectMember.isExpandableCollapsible
  > .attributeObjectMemberToggle
    width 20px
    max-width 20px
    min-width 20px

.attributeObjectMemberKey
  width 160px
  max-width 160px
  min-width 160px
  order 2

.attributeObjectMemberRequirement
  max-width 25px
  width 25px
  min-width 25px
  order 3

.attributeObjectMemberDescription
  flex-grow 4
  order 4

.attributeObjectMemberValue
  order 5
  width 100%
  margin-left 20px


/**
 * Base
 */
.attributeObjectMember
  padding-bottom 10px
  padding-top 10px
  border-bottom 1px solid #d8dbe4

.attributeObjectMember.isExpandableCollapsible
  .attributeObjectMember
    .attributeObjectMemberKey
      padding-left 10px

.attributeObjectMember.isObject
  .attributeObjectMemberValue
    border 1px solid #d8dbe4

.attributeObjectMember.isArray
  .attributeObjectMemberValue
    background-color #f7f8fb
    border 1px solid #d8dbe4

.attributeObjectMember.isExpandableCollapsible
  .attributeObjectMemberValue
    margin-top 10px

.attributeObjectMember.isExpandableCollapsible
  .attributeObjectMemberValue
    .attributeObject
      .attributeObjectMemberContainer:last-child
        .attributeObjectMember
          border-bottom 0px

.attributeObjectMember.isExpanded
  .attributeObjectMemberValue
    display block

.attributeObjectMember.isCollapsed
  .attributeObjectMemberValue
    display none

